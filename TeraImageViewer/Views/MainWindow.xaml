<Window x:Class="TeraImageViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TeraImageViewer.Converters"
        mc:Ignorable="d"
        Title="TeraCyte Image Viewer"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
        <converters:HistogramHeightConverter x:Key="HistogramHeightConverter"/>
        <converters:TimestampConverter x:Key="TimestampConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0066cc" Padding="15,10">
            <Grid>
                <TextBlock Text="TeraCyte Image Viewer"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <Button Content="Logout"
                       Command="{Binding LogoutCommand}"
                       HorizontalAlignment="Right"
                       Padding="20,5"
                       Background="White"
                       Foreground="#0066cc"
                       FontWeight="SemiBold"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Background="#F9F9F9">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="Data"
                              FontSize="18"
                              FontWeight="Bold"
                              Margin="15,15,15,10"
                              Foreground="#333"/>

                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding History}"
                            SelectedItem="{Binding SelectedData}"
                            BorderThickness="0"
                            Background="Transparent"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="10,5"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                       BorderBrush="#D0D0D0"
                                       BorderThickness="1"
                                       CornerRadius="4"
                                       Padding="10"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0"
                                              Source="{Binding ImageDataBase64, Converter={StaticResource Base64ToImageConverter}}"
                                              Height="120"
                                              Stretch="Uniform"
                                              Margin="0,0,0,8"/>

                                        <TextBlock Grid.Row="1"
                                                  Text="{Binding Timestamp, Converter={StaticResource TimestampConverter}}"
                                                  FontSize="12"
                                                  Foreground="#666"
                                                  TextAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                       BorderBrush="#D0D0D0"
                       BorderThickness="1"
                       Background="White"
                       Padding="10">
                    <Image Source="{Binding SelectedData.ImageDataBase64, Converter={StaticResource Base64ToImageConverter}}"
                          Stretch="Uniform"/>
                </Border>

                <Grid Grid.Row="1" Margin="0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Intensity Average" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedData.IntensityAverage, StringFormat='{}{0:F2}', FallbackValue='N/A', TargetNullValue='N/A'}"
                                  FontSize="18"
                                  FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Focus Score" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedData.FocusScore, StringFormat='{}{0:F2}', FallbackValue='N/A', TargetNullValue='N/A'}"
                                  FontSize="18"
                                  FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Classification" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedData.ClassificationLabel, FallbackValue='N/A', TargetNullValue='N/A'}"
                                  FontSize="18"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="2"
                       BorderBrush="#D0D0D0"
                       BorderThickness="1"
                       Background="White"
                       Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                  Text="Histogram"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedData.Histogram}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0066cc"
                                           Margin="0.5,0"
                                           VerticalAlignment="Bottom">
                                        <Border.Height>
                                            <MultiBinding Converter="{StaticResource HistogramHeightConverter}">
                                                <Binding Path="."/>
                                                <Binding RelativeSource="{RelativeSource AncestorType=Grid}" Path="ActualHeight"/>
                                            </MultiBinding>
                                        </Border.Height>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="3"
                          Text="{Binding ErrorMessage}"
                          Foreground="Red"
                          FontSize="12"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Right"
                          Margin="0,5,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
