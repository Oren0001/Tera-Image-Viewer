<Window x:Class="TeraImageViewer.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TeraCyte Image Viewer - Login"
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="TeraCyte Image Viewer"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       Foreground="#0066cc"/>

            <TextBlock Text="Username:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Height="30"
                     Padding="5"
                     Margin="0,0,0,15"/>

            <TextBlock Text="Password:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="30"
                         Padding="5"
                         Margin="0,0,0,20"/>

            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    Height="35"
                    Background="#0066cc"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="0,0,0,15"
                    Cursor="Hand"
                    Click="LoginButton_Click"/>

            <TextBlock Text="{Binding StatusMessage}"
                       TextAlignment="Center"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       MinHeight="20"/>
        </StackPanel>
    </Grid>
</Window>
